{
    "apiVersion": "1.3",
    "version": "1.0",
    "name": "Spotfire Vega Lite",
    "id": "spotfire-vega-lite",
    "icon": "icon.svg",
    "properties": [
        {
            "name": "myProperty",
            "type": "string",
            "defaultValue": "myValue"
        }
    ],
    "dataViewDefinition": {
        "colorAxis": {
            "mode": "dual",
            "dropTarget": {
                "icon": "Color",
                "description": "Color by {0}"
            }
        },
        "axes": [
            {
                "name": "Category",
                "mode": "categorical",
                "placement": "left",
                "dropTarget": {
                    "icon": "XAxis3D",
                    "description": "Bar by {0}"
                }
            },
            {
                "name": "Value",
                "mode": "continuous",
                "placement": "bottom"
            }
        ]
    },
    "files": ["index.html", "main.css", "build/main.js"]
}
